<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background_mainpart"
    tools:context=".Book_movies">

    <ImageView
        android:id="@+id/ivmov"
        android:layout_width="391dp"
        android:layout_height="253dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/splashlogo" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="#E91E63"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.607" />

    <TextView
        android:id="@+id/tvmov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textColor="#F8F1F1"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivmov" />

    <TextView
        android:id="@+id/tvhero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="68dp"
        android:text="TextView"
        android:textColor="#FAF3F3"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvmov" />

    <TextView
        android:id="@+id/tvheroine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="TextView"
        android:textColor="#F8F0F0"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toEndOf="@+id/tvhero"
        app:layout_constraintTop_toBottomOf="@+id/tvmov" />

    <Button
        android:id="@+id/btnmov"
        android:layout_width="420dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_background_sports"
        android:text="book"
        android:textColor="#FAEAEA"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvtheatre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:text="TextView"
        android:textColor="#F4EAEA"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnmov"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="46dp"
        android:layout_height="20dp"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="8dp"
        android:text="Hero"
        android:textColor="#F4EDED"
        app:layout_constraintBottom_toTopOf="@+id/tvhero"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="12dp"
        android:text="Heroine"
        android:textColor="#FAF4F4"
        app:layout_constraintBottom_toTopOf="@+id/tvheroine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvmov"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="116dp"
        android:layout_height="35dp"
        android:layout_marginBottom="124dp"
        android:clickable="true"
        android:entries="@array/tickets_list"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnmov"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="124dp"
        android:text="No.of Tickets"
        android:textColor="#EFE6E6"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnmov"
        app:layout_constraintEnd_toStartOf="@+id/spinner"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="72dp"
        android:text="Price of Ticket"
        android:textColor="#F1ECEC"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnmov"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvprice"
        android:layout_width="110dp"
        android:layout_height="33dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="68dp"
        android:text="TextView"
        android:textColor="#E6DBDB"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnmov"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/movdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Date"
        android:textColor="#EDE5E5"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnmov"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginBottom="16dp"
        android:text="Date "
        android:textColor="#EAE0E0"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnmov"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>